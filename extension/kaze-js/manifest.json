{
  "name": "kaze-js",
  "version": "1.0",
  "manifest_version": 3,
  "permissions": ["activeTab", "scripting"],
  "web_accessible_resources": [{
    "resources": ["*.js"],
    "matches": ["https://*/*"]
  }],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_title": "kaze-js",
    "default_icon": "icon.png"
  }
}